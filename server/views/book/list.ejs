<%- include ../partials/header.ejs %>
<%- include ../partials/main_nav.ejs %>

<!-- Main Content -->
<main class = "container">
    <div class = "row">
        <div class = "col-md-offset-3 col-md-11">
            <h1> Business Contact List </h1>
            <h4>Please Log in for editing</h4>
            <% if(typeof displayName == 'string' && displayName) { %>
            <a href="/book-list/add" class="btn btn primary" role="button">
            <i class="fas fa-plus-circle"></i> Add the business contact ! </a>
            <% } %>

            <br>
            <table class="table table-bordered table-stripted table-hover">
                <!-- Header Row-->
                <tr class="d-flex">
                <% if(typeof displayName == 'string' && displayName) { %>
                        <th class="text-center col-2">Contact Name</th>
                        <th class="text-center col-2">Cantact Number</th>
                        <th class="text-center col-4">Email Address</th>
                        <th class="text-center col-6">(Not optional) message</th>
                        <th class="text-center col-1"></th>
                        <th class="text-center col-1"></th>
                        <% } else { %>
                        <th class="text-center col-2">Contact Name</th>
                        <th class="text-center col-2">Cantact Number</th>
                        <th class="text-center col-4">Email Address</th>
                        <th class="col-6">(Not optional) message</th>
                    <% } %>
                    </tr>

                <!-- Repeatable Template Row-->

                <% for(let count = 0; count < BookList.length; count++) { %>
                    <tr class= "d-flex">
                       <% if(typeof displayName == 'string' && displayName) { %>
                        <td class="text-center col-2"><%= BookList[count].name %></td>
                        <td class="text-center col-2"><%= BookList[count].author %></td>
                        <td class="text-center col-4"><%= BookList[count].published %></td>
                        <td class="text-center col-6"><%= BookList[count].description %></td>
                        <td class="text-center col-1">
                            <a href="/book-list/edit/<%= BookList[count]._id %>" class="btn btn-primary btn-sm">
                            <i class="fas fa-pencil-alt"></i> Edit</a>
                        </td>
                        <td class="text-center col-1">
                                <a href="/book-list/delete/<%= BookList[count]._id %>" class="btn btn-danger btn-sm">
                                <i class="fas fa-trash-alt"></i> Delete</a>
                            </td>
                         <% } else { %>
                            <td class="text-center col-2"><%= BookList[count].name %></td>
                            <td class="text-center col-2"><%= BookList[count].author %></td>
                            <td class="text-center col-4"><%= BookList[count].published %></td>
                            <td class="col-6"><%= BookList[count].description %></td>
                         <% } %>
                    </tr>
                <% } %>
            
            </table>
        </div>

    </div>
</main>


<%- include ../partials/bottom_nav.ejs %> 
<%- include ../partials/footer.ejs %>




